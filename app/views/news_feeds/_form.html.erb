<%= form_for @news_feed, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :link, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :link, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :published_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :published_date, :class => 'datetime_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :keywords, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :keywords, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :image_urls, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :image_urls, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :rss_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :rss_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                news_feeds_path, :class => 'btn' %>
  </div>
<% end %>
