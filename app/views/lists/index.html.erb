<div class="page-header">
  <h1 style="font-style: italic;">Lists</h1>
</div>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Rss Links</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= link_to list.name, list_path(list) %></td>
        <td><%= @rss_links.select{|rss| list.rss_link_ids.include?(rss[:id]) }.map(&:title).join(', ') if @rss_links %></td>
        <td>
          <%= link_to "Edit",
                      edit_list_path(list), :class => 'btn-success btn btn-mini' %>
          <%= link_to "Delete",
                      list_path(list),
                      :method => :delete,
                      :confirm => 'Are you sure?',
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br />
<%= paginate @lists %>
<%= link_to "Create a List", new_list_path, :class => 'btn btn-primary' %>
