<table class='table table-bordered table-striped' id='listsTable'>
  <tr>
    <th>Name</th>
    <th>Actions</th>
  </tr>
  <% categories.each do |category| %>
    <tr>
      <td><%= category.name %></td>
      <td><%= link_to 'Edit', edit_category_path(category), class: "btn btn-success btn-mini" %></td>
    </tr>
  <% end %>
</table>

<%= paginate @categories, remote: true %>
